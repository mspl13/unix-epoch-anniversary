# EditorConfig is awesome: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending, utf-8 encoding and the prefered
# indent style in every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Training whitespaces are actually part of the markdown syntax
[*.{md,mdown,markdown}]
trim_trailing_whitespace = false
